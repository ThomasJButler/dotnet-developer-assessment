@model DeveloperAssessment.Web.Models.ViewModels.BlogPostViewModel
@{
    ViewData["Title"] = Model.Title;
}

@* main blog details view - displays blog post content, comments & comment form *@
@* uses template.html structure with blog content, comments list & submission form sections *@

<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <!-- blog post content - replaces template placeholder with json data -->
            <h1 class="blog-title">@Model.Title</h1>
            <p class="blog-meta">Posted on @Model.FormattedDate</p>
            <img class="blog-image" src="@Model.Image" alt="@Model.Title">

            <!-- display html content - using html.raw to render html from json -->
            <div class="blog-content">
                @Html.Raw(Model.HtmlContent)
            </div>
            <hr>

            <!-- blog post comment form - allows users to submit new comments -->
            <div class="card comment-form-card">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form asp-action="AddComment" asp-route-id="@Model.Id" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label for="commentName">Name</label>
                            <input id="commentName" name="Name" class="form-control" placeholder="Your name" required autocomplete="name" />
                        </div>
                        <div class="form-group">
                            <label for="commentEmail">Email Address</label>
                            <input id="commentEmail" name="EmailAddress" type="email" class="form-control" placeholder="your.email@example.com" required autocomplete="email" />
                        </div>

                        <div class="form-group">
                            <label for="commentMessage">Message</label>
                            <textarea id="commentMessage" name="Message" class="form-control" rows="4" placeholder="Share your thoughts..." required></textarea>
                        </div>

                        <input type="hidden" name="BlogPostId" value="@Model.Id" />
                        <button type="submit" class="btn btn-comment">Submit Comment</button>
                    </form>
                </div>
            </div>

            <!-- blog post comments - displays existing comments & replies -->
            <h2 class="comments-heading">Comments</h2>
            @if (Model.Comments.Any())
            {
                foreach (var comment in Model.Comments)
                {
                    @Html.Partial("_Comment", comment)
                }
            }
            else
            {
                <p>No comments yet. Be the first to comment!</p>
            }

        </div>
    </div>
</div>

<!-- javascript for reply forms - toggles visibility and manages focus -->
<script>
    function toggleReply(commentName) {
        var formId = 'reply-' + commentName.replace(/\s/g, '');
        var form = document.getElementById(formId);
        var button = document.querySelector('[aria-controls="' + formId + '"]');

        if (form.style.display === 'none') {
            form.style.display = 'block';
            if (button) button.setAttribute('aria-expanded', 'true');
            // Move focus to first input field
            var firstInput = form.querySelector('input[type="text"], input[name="Name"]');
            if (firstInput) {
                setTimeout(function() { firstInput.focus(); }, 100);
            }
        } else {
            form.style.display = 'none';
            if (button) button.setAttribute('aria-expanded', 'false');
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}